<%- include('../partials/header', { title }) %>

<main class="vehicle-detail">
  <h1><%= title %></h1>

  <div class="detail-wrapper">
    <div class="vehicle-image">
      <img src="<%= detailView.image %>" alt="<%= detailView.title %>">
    </div>

    <div class="vehicle-info">
      <p><strong>Price:</strong> $<%= detailView.price %></p>
      <p><strong>Year:</strong> <%= detailView.year %></p>
      <p><strong>Color:</strong> <%= detailView.color %></p>
      <p><strong>Miles:</strong> <%= detailView.miles %></p>
      <p><%= detailView.description %></p>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
