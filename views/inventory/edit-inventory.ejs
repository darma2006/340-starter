<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../partials/header'); %>
  <main>
    <h1><%= title %></h1>

    <!-- Error Messages -->
    <% if (errors && errors.length > 0) { %>
      <div class="error-list">
        <ul>
          <% errors.forEach(function(error){ %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/inv/update" method="post">

      <!-- Classification dropdown -->
      <label for="classification_id">Classification</label>
      <select name="classification_id" id="classification_id" required>
        <%= classificationList %>
      </select>

      <!-- Make -->
      <label for="inv_make">Make</label>
      <input 
        type="text" 
        id="inv_make" 
        name="inv_make" 
        value="<%= inv_make %>" 
        required
      >

      <!-- Model -->
      <label for="inv_model">Model</label>
      <input 
        type="text" 
        id="inv_model" 
        name="inv_model" 
        value="<%= inv_model %>" 
        required
      >

      <!-- Description -->
      <label for="inv_description">Description</label>
      <textarea 
        id="inv_description" 
        name="inv_description" 
        required><%= inv_description %></textarea>

      <!-- Image -->
      <label for="inv_image">Image Path</label>
      <input 
        type="text" 
        id="inv_image" 
        name="inv_image" 
        value="<%= inv_image %>" 
        required
      >

      <!-- Thumbnail -->
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input 
        type="text" 
        id="inv_thumbnail" 
        name="inv_thumbnail" 
        value="<%= inv_thumbnail %>" 
        required
      >

      <!-- Price -->
      <label for="inv_price">Price</label>
      <input 
        type="number" 
        step="0.01" 
        id="inv_price" 
        name="inv_price" 
        value="<%= inv_price %>" 
        required
      >

      <!-- Year -->
      <label for="inv_year">Year</label>
      <input 
        type="number" 
        id="inv_year" 
        name="inv_year" 
        value="<%= inv_year %>" 
        required
      >

      <!-- Miles -->
      <label for="inv_miles">Miles</label>
      <input 
        type="number" 
        id="inv_miles" 
        name="inv_miles" 
        value="<%= inv_miles %>" 
        required
      >

      <!-- Color -->
      <label for="inv_color">Color</label>
      <input 
        type="text" 
        id="inv_color" 
        name="inv_color" 
        value="<%= inv_color %>" 
        required
      >

      <!-- Hidden inventory ID -->
      <input type="hidden" name="inv_id" value="<%= inv_id %>">

      <button type="submit" class="submit-btn">Save Changes</button>

    </form>
  </main>

  <%- include('../partials/footer'); %>
</body>
</html>
